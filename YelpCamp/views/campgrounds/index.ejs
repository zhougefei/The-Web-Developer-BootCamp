<%- include("../partials/header") %>

	<header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <% if(noMatch !== null) { %>
        <div id="search-container">
		    <h3><%= noMatch %></h3>
        </div>
		<div id="search-container">
			<form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                     <input type="text" name="search" placeholder="Campground search..." class="form-control">
			         <input type="submit" value="Search" class="btn btn-info">
                </div>
            </form>
		</div>
	<% } %>

    <div class="row text-center flex-wrap">
		<% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail img-responsive">
                   <img src="<%= campground.image %>" width="100%" height="160px">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
         <% }); %>
    </div>

<%- include("../partials/footer") %>
